<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--设置导航栏不可见-->
    <style name="AppTheme.Start" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.toolbar" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="my_text_style">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="home_title">
        <item name="android:textColor">#2A712D</item>
    </style>
    <style name="home_content">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="home_time">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#555454</item>
    </style>
    <style name="project_content_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="project_content_content">
        <item name="android:textColor">#555252</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="project_content_time">
    <item name="android:textSize">13sp</item>
    <item name="android:textColor">#555454</item>
    </style>
    <style name="navigate_textview">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#009688</item>
    </style>
</resources>